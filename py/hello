#!/usr/bin/env python3

import skilstak.colors as c
import time

def print_plain(message):
    """Clears screen and prints 'Hello World."""
    print(c.clear + "Hello World" + c.reset)

def print_color()
    """Prints hello in color"""
    print(c.clear)
    while True:
        print(c.clear + c.rc() + "Hello World" + c.reset)        

def print_muti()        
    """prints 'hello world' in fancy random colors"""
    while True:
        print(c.clear + c.multi(message))
        time.sleep(0.5)

def hello(kind='plain'):
    """Main 'Hello World' function"""
    try:
        if kind == 'color':
             color()
        elif kind.startswith('m'):
            multi()
        else:
            plain()    
    except KeyboardInterrupt:
        return

if __name__ == '__main__':
    name =='world'

